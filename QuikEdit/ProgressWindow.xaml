<Window x:Class="QuikEdit.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuikEdit"
        mc:Ignorable="d"
        Title="" Height="120" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <ProgressBar Name="PBar" Width="275" Value="0" Maximum="100" Height="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0">
            <ProgressBar.Style>
                <Style/>
            </ProgressBar.Style>
        </ProgressBar>
        <TextBlock Name="StatusLabel" Text="Converting files..." VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="Black" Margin="0,15,0,0" FontSize="18" Height="24"/>
    </Grid>
</Window>
